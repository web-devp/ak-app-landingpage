# Ignore everything
*

# Whitelist important files and directories
!/.gitignore
!*/src/
!/public/
!/package.json
!/svelte.config.js
!/tailwind.config.js
!/vite.config.js
!/tsconfig.json  # if using TypeScript
!/README.md
!/static/  # if using static files in SvelteKit

# Keep specific files inside src and public directories
/src/**
/public/**

# Ignore node_modules and build output
*/node_modules/
*/public/build/
*/dist/
*/build/

# Ignore logs, environment, and system files
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.env
.env.local
.env.*.local
.DS_Store
Thumbs.db
*.swp
*.lock

# Ignore IDE/editor settings
.vscode/
.idea/
